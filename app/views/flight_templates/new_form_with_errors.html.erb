<!-- Validation failure messages -->
<% if @flight.present? %>
  <% if @flight.errors.any? %>
    <% @flight.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new flight
</h1>


<hr>

<!-- Form flight start -->
<form action="/create_flight" method="post">
<!-- Form flight end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @flight.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for departure start -->
  <div class="form-group">
    <label for="departure">
      Departure
    </label>

    <!-- Input for departure start -->
    <input type="text" id="departure" name="departure" class="form-control" value="<%= @flight.departure %>">
    <!-- Input for departure end -->
  </div>
  <!-- Label and input for departure end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @flight.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
