<% if @flight.present? %>
  <% if @flight.errors.any? %>
    <% @flight.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new flight
</h1>


<hr>

<form action="/create_flight" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @flight.description %></textarea>
  </div>

  <div class="form-group">
    <label for="departure">
      Departure
    </label>

    <input type="text" id="departure" name="departure" class="form-control" value="<%= @flight.departure %>">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @flight.user_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
