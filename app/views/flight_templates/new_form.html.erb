<h1>
  Add a new flight
</h1>


<hr>

<form action="/create_flight" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="departure">
      Departure
    </label>

    <input type="text" id="departure" name="departure" class="form-control">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-check">
    <input type="hidden" value="0" name="message_sent">
    <input id="message_sent" class="form-check-input" name="message_sent" type="checkbox">
    <label for="message_sent" class="form-check-label">
      Message sent
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
